<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg",class: "rounded-circle border border-5 border-primary animated flip") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
	  <th>follows</th>
	  <th><%= link_to "#{user.follower.count}",following_user_path(user)%></th>
	</tr>
	<tr>
	  <th>followsers</th>
	  <th><%= link_to "#{user.followed.count}",followers_user_path(user)%></th>
  </tr>
</table>

<div class='row'>
  	  <% unless user == current_user %>
      <% if current_user.following?(user) %>
        <%= link_to 'フォロー外す', unfollow_path(user.id), method: :POST,class: "btn btn-outline-danger btn-sm btn-block" %>
      <% else %>
        <%= link_to 'フォローする', follow_path(user.id), method: :POST ,class: "btn btn-outline-primary btn-sm btn-block"%>
      <% end %>
  <% end %>
  <%= link_to '',edit_user_path(user),class: "btn rounded-pill btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
      <!--チャット機能----------------->
      <% if current_user != user %>
      <%= link_to 'chatを始める', chat_path(user.id),class: "btn btn-success btn-sm btn-block" %>
      <% end %>
      <!------------------------------->
</div>